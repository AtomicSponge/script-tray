@import './styleVars.styl'

:root
  font-family app_font
  font-size app_font_size
  line-height 1.5
  font-weight 400

  color app_fg_color
  background-color app_bg_color

  font-synthesis none
  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

a
  font-weight 500
  color url_color
  text-decoration inherit
a:hover
  color url_hover_color
a:visited
  color url_visit_color

body
  padding 0
  margin 0
  display flex
  place-items start
  align-items stretch
  justify-content start
  min-height 100vh

h1
  font-size 3.2em
  line-height 1.1

button
  border-radius 8px
  border 1px solid transparent
  padding 0.6em 1.2em
  font-size 1em
  font-weight 500
  font-family inherit
  color button_fg_color
  background-color button_bg_color
  cursor pointer
  transition border-color 0.25s
button:hover
  border-color button_hv_color
button:focus, button:focus-visible
  outline 4px auto -webkit-focus-ring-color

app
  max-width 1280px
  margin 0 auto
  padding 2rem
  text-align center
